{
  "name": "react-server-render",
  "version": "2.0.0",
  "description": "利用 koa 实现 react 开发 server",
  "scripts": {
    "start": "pm2 start build/server.js",
    "watch": "nodemon -r babel-register server.dev.js",
    "build": "npm run build-web && npm run build-server && npm run build-static && npm run build-service",
    "build-web": "webpack --config ./web/webpack.config.prod.js",
    "build-server": "babel server -d build/api",
    "build-static": "babel static -d build/static -D",
    "build-service": "babel ./server.prod.js -o build/server.js"
  },
  "engines": {
    "node": "6.9.1",
    "npm": "3.10.8"
  },
  "importSort": {
    ".js,.css,.scss": {
      "parser": "babylon",
      "style": "module"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tech-demo/react-koa.git"
  },
  "keywords": [
    "react",
    "koa"
  ],
  "dependencies": {
    "koa": "2.2.0",
    "koa-bodyparser": "4.2.0",
    "koa-router": "7.1.1",
    "koa-static": "3.0.0",
    "pm2": "^2.6.1",
    "react": "15.4.2",
    "react-dom": "15.4.2"
  },
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "babel-cli": "6.24.1",
    "babel-core": "6.24.0",
    "babel-eslint": "7.2.1",
    "babel-loader": "6.4.1",
    "babel-plugin-import": "1.1.1",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.24.0",
    "babel-preset-react": "6.23.0",
    "babel-preset-stage-0": "6.22.0",
    "babel-register": "6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-babel": "4.1.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.3",
    "html-webpack-plugin": "2.28.0",
    "koa-logger": "3.0.0",
    "koa-webpack-dev-middleware": "2.0.1",
    "nodemon": "^1.12.0",
    "url-loader": "0.5.8",
    "webpack": "2.3.2",
    "webpack-stream": "3.2.0"
  }
}
